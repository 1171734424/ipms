@charset "utf-8";

* {
	font-size: 12pt;
	border: 0;
	margin: 0;
	padding: 0;
}


body {
	font-family: '微软雅黑';
	margin: 0 auto;
	min-width: 980px;
	color:#333;
}

ul {
	display: block;
	margin: 0;
	padding: 0;
	list-style: none;
}

li {
	display: block;
	margin: 0;
	padding: 0;
	list-style: none;
}

img {
	border: 0;
}

dl,dt,dd,span {
	margin: 0;
	padding: 0;
	display: block;
}

a,a:focus {
	text-decoration: none;
	color: #000;
	outline: none;
	blr: expression(this.onFocus = this.blur () );
}
 

table {
	border-collapse: collapse;
	border-spacing: 0;
}

cite {
	font-style: normal;
}

h2 {
	font-weight: normal;
}

/*cloud*/
#mainBody {
	background:url("../images/login_bg3.png") no-repeat;
	background-color: #60b6e8;
	background-size:100% 100%;
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: -1;
}

.cloud {
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	background: url(../images/cloud.png) no-repeat;
	z-index: 1;
	opacity: 0.5;
}

#cloud2 {
	z-index: 2;
}

.logintop {
	height: 90px;
	position: absolute;
	top:50%;
	left:50%;
	margin-left:-130px;
	margin-top:-241px;
	z-index: 100;
	width: 100%;
	color:#333;
}

.logintop span {
	margin-top:-10px;
	font-size:40px;
	color: #333;
	line-height:80px;
	color: #000;
	text-indent: 44px;	
	float: left;
}

.loginbody {
	background: url(../images/loginbg3.png) no-repeat center center;
	width: 100%;
	height: 95%;
	overflow: hidden;
	position: absolute;
	top: 47px;
}

.systemlogo {
	background: url(../images/loginlogo.png) no-repeat center;
	width: 100%;
	height: 71px;
	margin-top: 75px;
}

.loginbox {
	position: absolute;
	left: 50%;
	top: 50%;
	width: 692px;
	height: 336px;
	background: url(../images/logininfo.png) no-repeat;
	background-position: center;
	margin-left: -346px;
	margin-top: -168px;
}


.loginbm {
	height: 50px;
	line-height: 50px;
	text-align: center;
	background: url(../images/loginbg2.png) repeat-x;
	position: absolute;
	bottom: 0;
	width: 100%;
	color: #333;
}

.indexbody {
	/*background-color: #1c77ac;*/
	background-image: url(images/light.png);
	background-repeat: no-repeat;
	background-position: center top;
	overflow: hidden;
}

.container {
	margin-top: 60px;
	margin-left: 285px;
	margin-bottom: 25px;
	margin-right: 5px;
}

.username {
	width: 299px;
	height: 48px;
	background: url(../images/loginuser.png) no-repeat;
	line-height: 48px;
	clear: both;
	padding-left: 44px;
	font-size: 14px;
	font-weight: bold;
	padding-top: 1px;
}

.password {
	margin-top: 30px;
	width: 299px;
	height: 48px;
	background: url(../images/loginpassword.png) no-repeat;
	line-height: 48px;
	clear: both;
	padding-left: 44px;
	font-size: 14px;
	font-weight: bold;
	padding-top: 1px;
}

.form .label {
	float: right;
	width: 140px;
	padding-right: 50px;
	text-align: right;
	line-height: 24px;
	min-height: 24px;
	_height: 24px;
}

.loginspan {
	display: inline;
	font-size: 25px;
	font-family: Microsoft YaHei;
}

.info{
	margin-top: 3px;
	line-height: 100%;
	height: 50px;
	width: 300px;
}
.font_normal {
	line-height: 35px;
	font-size: 14px;
	font-family: Microsoft YaHei;
}

input[type=text],input[type=password] {
	margin-left: 0px;
	border: none;
    outline:none;
    color:#333;
    margin-top: 15px;
	width: 299px;
	height: 48px;
}
.error {
	background: url("../images/theme_sprite.png") no-repeat scroll 0 0
		transparent;
	background-position: -11px -247px;
	color: #4B5453;
	display: none;
	font-size: 14px;
	height: 29px;
	padding-top: 15px;
	position: absolute;
	text-align: center;
	vertical-align: middle;
	width: 177px;
}

.btn_login {
	background-color:#03a9f4;
    border: none;
}
.btn_login,.btn_regist,.btn_reset{
	float:left;
	margin:30px 0px 0px 9px;
	border-radius:4px;
	text-align: center;
	color: #fff;
	text-decoration: none;
	width: 100px;
	height: 35px;
	line-height:35px;
	display: inline-block;
	padding-top: 0px;
	transition:all 0.5s ease-in-out;
}
.btn_regist {
    border: 1px #03a9f4 solid;
    color: #03a9f4;
}

.btn_reset {
	border: 1px #c2c2c2 solid;
	color: #c2c2c2;
}

.btn_login:hover{
	padding-top: 1px;
	background-color: #0096da;
	color:#fff;
}
.btn_regist:hover{
	background-color: #03a9f4;
    color: #fff;
}
.btn_reset:hover{
	background-color: #aaa;
	color: #fff;
ul li {
	list-style: none;
	float: left;
}

.li_padding {
	padding-left: 15px;
}
	
	
	
	
