/*内容区域*/
section.box-content-section ,section.box_content_widget{
	-webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
section.box-content-section{
  	height: 546px;
  	margin-top:-10px;
}
section.box_content_widget {
	width: 100%;
    background: #fff;
    margin: 0 0 25px 0;
    padding:0 10px;
    min-height: 400px;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
}
section.box_content_widget header {
    background: #3B3E40;
    padding: 19px 25px;
    height: 70px;
    border-bottom: none;
    overflow: visible;
    border-radius: 5px 5px 0 0;
    -webkit-border-radius: 5px 5px 0 0;
    -moz-border-radius: 5px 5px 0 0;
}
section.box_content_widget header hgroup{
	float:left;
	margin: 0 0 0 15px;
}
/*widget意为窗口小部件*/
section.box_content_widget header h1 {
    font-family: 'Open Sans', sans-serif;
    line-height: 23px;
    font-size: 16px;
}
section.box_content_widget header h1 {
    color: #fff;
    font-family: 'Open Sans', sans-serif;
    font-size: 22px;
    letter-spacing: -1px;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2);
    float: left;
    width: 100%;
}
section.box_content_widget header h2 {
    font-family: 'Open Sans', sans-serif;
    font-size: 12px;
    color: #5daced;
}
/*小部件区域结束*/
/*内容表格展区域开始*/
section.box_content_widget .content {
    padding:0 10px;
}	
table.myTable{
	border: 1px solid #e9e9e9;
    width: 100%;
    -khtml-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    table-layout:fixed;
    word-break:break-all;
}
table.myTable tr {
   /* border: 1px solid #e9e9e9;*/
    background: #fff;
}
table.myTable thead tr {
    background: #ededee !important;
    border-bottom: 1px solid #fff;
}
table.myTable tbody tr:hover,table.myTable tbody tr:nth-child(odd):hover{
    background: #4A5064;
    background: -moz-linear-gradient(top, #4A5064 0%, #4A5064 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#4A5064), color-stop(100%,#4A5064));
    background: -webkit-linear-gradient(top, #4A5064 0%,#4A5064 100%);
    background: -o-linear-gradient(top, #4A5064 0%,#4A5064 100%);
    background: -ms-linear-gradient(top, #4A5064 0%,#4A5064 100%);
    background: linear-gradient(to bottom, #4A5064 0%,#4A5064 100%);
    color:#fff;
}	
table.myTable tbody tr:hover td p{
	color:white;
}
