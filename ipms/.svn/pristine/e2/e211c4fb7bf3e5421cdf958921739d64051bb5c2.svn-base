table.myTable tr:nth-child(odd) {
    background: #f0f0f0;
}
table.myTable th {
    font-weight: bold;
    min-width: 100px;
    font-size: 0.7rem;
    color: #333;
}
table.myTable th:first-child {
    padding-left:16px;
}
table.myTable thead tr .header {
    cursor: pointer;
    height: 2.5em;
}
table.myTable td {
    vertical-align: middle;
    padding: 4px;
    font-size:12px;
  max-width:120px;
    border:none;
    text-align: center;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;

}