	width: 75px;
}
.order_height .tab_select{
	height: 34px;
    line-height: 31px;
    text-align: center;
    width: 100px;
    border: 1px solid #CCCCCC;
    background: #fff;
    color: #333;
    cursor: pointer;
    border-radius: 2px;
}
/*数量结束*/
.submitbotton {
	font-size: 14px;
	font-family: "微软雅黑";
	height: 34px;
	line-height: 31px;
	text-align: center;
	width: 80px;
	margin-left: 4px;
	border: 1px solid #CCCCCC;
	background: #4A5064;
	color: #fff;
	cursor: pointer;
}

