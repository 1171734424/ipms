.order_height{
	height:716px;
	overflow: scroll;
}
/*数量*/
input.numcount{
	width:60px;
	margin-left:12px;
    text-align: center;
   
}
.order_detail .count{
	width: 30px;
    height: 33px;
    line-height: 30px;
    display: inline-block;
    border: 1px solid #ddd;
    text-align: center;
    border-radius: 4px;
    margin-left: 9px;
    text-align: center;
    cursor: pointer;
  
}
.order_detail .jia{
}
.order_detail textarea{
	width: 841px;
	height: 38px;
}
