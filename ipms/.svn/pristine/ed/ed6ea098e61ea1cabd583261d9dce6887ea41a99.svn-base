/*内容区域*/
.cash_wrapper{
	width: 90%;
    margin: 2% 5%;
}
.cash_one{
	height:40px;
	line-height:40px;
}
/*头部查询*/
.cash_header{
	margin: 10px 20px;
	font-size:1.1rem;
}
/*数据展示区域*/
section.box_content_widget{
	-webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
section.box_content_widget{
	width: 100%;
	height:auto;
    background: #fff;
    border: 1px solid #e3e3e3;
    min-height: 100px;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
}
table.myTable{
	border: 1px solid #e9e9e9;
    width: 100%;
    -khtml-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    table-layout:fixed;
    word-break:break-all;
}
table.myTable thead tr{
	height:25px;
}
table.myTable th {
    font-weight: bold;
    min-width: 100px;
    text-align: left;
    font-size: 0.7rem;
}
table.myTable th:first-child {
    padding-left:16px;
}
table.myTable td {
    vertical-align: middle;
    padding: 10px;
    font-size: 0.7rem;
    white-space: nowrap;
}
.cash_header .label_name {
    width: 70px;
    text-align: right;
    font-weight: normal;
    font-size: 0.85rem;
    display: inline;
}
input {
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    color: #323232;
    background-color: #fff;
    border: 1px solid #DDDDDD;
    line-height: 1.2;
    font-size: 0.85rem;
    -webkit-box-shadow: none!important;
    box-shadow: none!important;
    -webkit-transition-duration: .1s;
    transition-duration: .1s;
}
.cash_one .cash_search {
    padding: 10px 5px;
    width: 150px;
    margin-left: 10px;
}
.button_margin_submit{
    padding: 10px 36px;
    margin-left: 40px;
}





















