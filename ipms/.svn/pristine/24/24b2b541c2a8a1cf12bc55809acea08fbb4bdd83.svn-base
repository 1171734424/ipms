	@RequestMapping("/getOrderDetail.do")
	public void getOrderDetailUsedInRefund(HttpServletRequest request, HttpServletResponse response,String orderId)throws Exception {
		Order order = (Order) orderService.findOneByProperties(Order.class, "orderId", orderId);
		List<Bill> bills = orderService.findByProperties(Bill.class, "branchId", order.getBranchId(), "checkId", orderId,"type","1");
		List<Bill> newBills = new ArrayList<Bill>();
		for(Bill bill : bills){
			if(bill.getProjectId().equals(CommonConstants.BillProject.Service) || bill.getProjectId().equals(CommonConstants.BillProject.CLEANPRICE)
					|| bill.getProjectId().equals(CommonConstants.BillProject.ForeGift) || bill.getProjectId().equals(CommonConstants.BillProject.Deposit)){
				if(bill.getProjectId().equals("2004")){
					Double cost = 0.0;
					List<Bill> billTwo = orderService.findByProperties(Bill.class, "branchId", order.getBranchId(), "checkId", orderId,"projectId","1234","status","1");
					if(billTwo.size() > 0){
						for(Bill b : billTwo){
							cost += b.getCost();
							bill.setPay(PriceUtil.doubleToPriceDouble(bill.getPay() - cost));
							newBills.add(bill);
						}
					}else{
						newBills.add(bill);
					}
				}else{
					newBills.add(bill);
				}
			}
		}
		
		JSONUtil.responseJSON(response, newBills);
	}
	
