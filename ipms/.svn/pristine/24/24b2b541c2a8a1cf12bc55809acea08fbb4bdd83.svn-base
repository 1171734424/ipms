				List<Bill> bills = orderService.findByProperties(Bill.class, "branchId", orderdata.getBranchId(), "checkId", orderdata.getOrderId());
				for(Bill bill : bills){
					if(bill.getProjectId().equals(CommonConstants.BillProject.Service) || bill.getProjectId().equals(CommonConstants.BillProject.CLEANPRICE)
