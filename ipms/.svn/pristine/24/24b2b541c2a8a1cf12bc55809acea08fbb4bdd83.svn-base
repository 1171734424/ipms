			if(order.getArrivalTime() == null || order.getArrivalTime().isEmpty()){
				//startTime = sdf.format(new Date());
				startTime = null;
			} else {
				startTime = order.getArrivalTime();
			}
			if(turnToOldPage.equals("turnToOldPage")){
				order.setArrivalTime(startTime);
