			house.setStatus("1");
			roomService.update(house);
		} else {
			if (orderdata.getStatus().equals(CommonConstants.OrderStatus.Cancel)) {
				flag = 1;
			} else {
				double pay = 0.00;
				double cost = 0.00;
				String sql = "queryorderpay";
