			} else if(status.equals("1")){//免责取消
				if(!StringUtil.isEmpty(money) && !money.equals("undefined")){
					Bill bill = new Bill();
					String billId = DateUtil.currentDate("yyMMdd") + branchId + "3" + roomService.getSequence("SEQ_NEW_BILL");
