						cleanPrice.setRefundStatus("1");
						
						Bill ForeGift = (Bill) orderService.findOneByProperties(Bill.class, "branchId", orderdata.getBranchId(), "checkId", orderdata.getOrderId(),
								"projectId", CommonConstants.BillProject.ForeGift);
