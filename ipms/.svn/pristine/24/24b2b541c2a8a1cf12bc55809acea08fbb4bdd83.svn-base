						bill.setPay(0.00);
						bill.setPayment("1");
						bill.setStatus("1");
						bill.setRecordUser(loginUser.getStaff().getStaffId());
						
						cleanPrice.setRefundStatus("1");
						
						orderService.save(bill);
						orderService.update(cleanPrice);
