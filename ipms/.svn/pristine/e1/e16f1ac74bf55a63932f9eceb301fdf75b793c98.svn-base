}

::-webkit-scrollbar  
{  
    width: 5px;  
    height: 5px;  
    background-color: #ccc;  
}  
  

::-webkit-scrollbar-track  
{  
    border-radius: 10px;  
    background-color: #fff;  
}  
  

::-webkit-scrollbar-thumb  
{  
    border-radius: 10px;  
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);  
    background-color: #ccc;  
}  